<h1> Actor #<%=@the_actor.id %> details </h1>
<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>
<a href="/delete_actor/<%=@the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>
<hr>
<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
  <img src="http://robohash.org/<%= @the_actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_actor.created_at) %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_actor.updated_at) %>
  </dd>
</dl>


<h2>Filmography</h2>
<table border ="1">
<% @filmography_actor.each do |a_film| %>
  <tr>
    <% info_movie = Movie.where({:id => a_film.movie_id }).at(0) %>
     <td> <%=info_movie.title%> </td>   
    
    <td> <%= info_movie.year %></td>

     <td><% d=info_movie.director_id %>
  <% info_d = Director.where({:id => d }).at(0)%>
  <%= info_d.name %>
 </td>

 <td> <%= a_film.name%> </td>

    <td>
      <a href="/movies/<%= a_film.id %>">
        Show details
      </a>  
    </td> 


  </tr>
<% end %>
</table>
